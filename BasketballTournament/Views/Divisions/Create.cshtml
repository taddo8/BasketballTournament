@model BasketballTournament.Models.DivisionViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>DivisionViewModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(x => x.Division.Name)
        @Html.TextBoxFor(x => x.Division.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.DivisionTypes)
        @Html.DropDownListFor(x => x.Id, new SelectList(Model.DivisionTypes, "Id", "Name"), "", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Division.TimeSlots)
        @Html.TextBoxFor(x => x.Division.TimeSlots, new { @class = "form-control"})
    </div>
    @Html.HiddenFor(m => m.Division.Id)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
